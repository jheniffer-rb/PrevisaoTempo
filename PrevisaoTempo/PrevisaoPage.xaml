<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisaodoTempo.PrevisaoPage">

    <StackLayout Padding="20">
        <Label Text="Pesquisar Previsão do Tempo" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="CidadeEntry" Placeholder="Digite o nome da cidade" />
        <DatePicker x:Name="DataPicker" Date="{x:Static system:DateTime.Now}" />
        <Button Text="Buscar" Clicked="OnBuscarClicked" />
        <Label x:Name="ResultadoLabel" FontSize="18" />
    </StackLayout>
</ContentPage>
